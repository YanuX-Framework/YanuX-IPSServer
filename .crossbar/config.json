{
  "version": 2,
  "controller": {
  },
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "realm1",
          "roles": [
            {
              "name": "trusted",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  }
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "paths": {
            "/": {
              "type": "wsgi",
              "module": "Server.wsgi",
              "object": "application"
            },
            "notify": {
              "type": "publisher",
              "realm": "realm1",
              "role": "trusted"
            },
            "ws": {
              "type": "websocket",
              "auth": {
                "ticket": {
                  "type": "static",
                  "principals": {
                    "client1": {
                      "ticket": "secretticket",
                      "role": "trusted"
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  ]
}