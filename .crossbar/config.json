{
  "$schema": "https://raw.githubusercontent.com/crossbario/crossbar/master/crossbar.json",
  "version": 2,
  "controller": {
  },
  "workers": [
    {
      "type": "router",
      "options": {
        "pythonpath": [
          ".."
        ]
      },
      "realms": [
        {
          "name": "realm1",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  }
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": "$PORT"
          },
          "paths": {
            "/": {
              "type": "static",
              "directory": "../web"
            },
            "notify": {
              "type": "publisher",
              "realm": "realm1",
              "role": "anonymous"
            },
            "ws": {
              "type": "websocket"
            }
          }
        }
      ]
    }
  ]
}